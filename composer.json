{
  "name": "construct-blue/snappy-renderer",
  "description": "A component oriented server side rendering engine for PHP",
  "homepage": "https://github.com/construct-blue/snappy-renderer",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Robert Kleinschuster",
      "email": "snappy@kleinschuster.de",
      "homepage": "https://www.robs.social",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpmd/phpmd": "^2.13",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "SnappyRenderer\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SnappyRendererTest\\": "test"
    }
  },
  "scripts": {
    "phpmd": "phpmd src ansi cleancode,codesize,controversial,design,naming,unusedcode",
    "phpstan": "phpstan analyse -c phpstan.neon"
  }
}
